{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "app/**/*.{ts,tsx,js,jsx,css,md}",
      "*.config.{js,ts}",
      "next.config.ts",
      "tailwind.config.ts",
      "postcss.config.js",
      "tsconfig.json"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    }
  ]
}
